# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=true

# Project Workspace (all file operations confined to this directory)
PROJECT_ROOT=./workspace

# AI Provider: 'openai' or 'gemini'
AI_PROVIDER=gemini

# OpenAI API Key (required if AI_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Key (required if AI_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Origin (production frontend URL, e.g. https://your-domain.com)
# CORS_ORIGIN=
